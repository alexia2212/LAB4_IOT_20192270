<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imagenPerfil"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="181dp"
        android:layout_height="179dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr Melvin Picard"
        android:layout_marginBottom="170dp"
        android:layout_marginStart="15dp"
        app:layout_constraintStart_toEndOf="@id/imagenPerfil"
        app:layout_constraintBottom_toBottomOf="parent"


         />

    <TextView
        android:id="@+id/textViewGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Genero: male"
        app:layout_constraintTop_toBottomOf="@+id/textViewName"
        app:layout_constraintStart_toStartOf="@id/textViewName"

        />

    <TextView
        android:id="@+id/textViewCity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ciudad: Lima"
        app:layout_constraintTop_toBottomOf="@id/textViewGender"
        app:layout_constraintStart_toStartOf="@id/textViewName"
         />


    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: aaa@asdfa"
        app:layout_constraintTop_toBottomOf="@id/textViewCity"
        app:layout_constraintStart_toStartOf="@id/textViewName"
         />

    <TextView
        android:id="@+id/textViewPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone: 06-60_30"
        app:layout_constraintTop_toBottomOf="@id/textViewEmail"
        app:layout_constraintStart_toStartOf="@id/textViewName"
         />

    <TextView
        android:id="@+id/textViewCountry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pais: Peru"
        app:layout_constraintTop_toBottomOf="@id/textViewPhone"
        app:layout_constraintStart_toStartOf="@id/textViewName"
         />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="36dp"
        android:layout_height="32dp"
        android:layout_marginEnd="-30dp"
        app:srcCompat="@drawable/baseline_remove_circle_24"
        app:layout_constraintTop_toTopOf="@+id/imagenPerfil"
        app:layout_constraintEnd_toStartOf="@id/imagenPerfil"
         />

</androidx.constraintlayout.widget.ConstraintLayout>